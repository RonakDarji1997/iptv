<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Horizontal Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#0f1419">

        <!-- Sidebar Container (same width as MainActivity) -->
        <FrameLayout
            android:id="@+id/sidebar_frame"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#1a2027">

            <LinearLayout
                android:id="@+id/sidebar_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <!-- Navigation Icons (same as MainActivity) -->
                <ImageView
                    android:id="@+id/nav_search"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/ic_search"
                    android:padding="15dp"
                    android:background="@drawable/nav_item_normal"
                    android:focusable="true"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/nav_tv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_live_tv"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/nav_item_normal"
                    android:focusable="true"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/nav_movies"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_movies"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/nav_item_selected"
                    android:focusable="true"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/nav_shows"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_series"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/nav_item_normal"
                    android:focusable="true"
                    android:clickable="true" />

            </LinearLayout>

        </FrameLayout>

        <!-- Main Content Area -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0f1419">

            <!-- Netflix-style Movie Rows -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_rows_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:clipToPadding="false" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/loading_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
