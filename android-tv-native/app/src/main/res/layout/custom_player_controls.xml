<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_controls_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:background="@android:color/transparent"
    android:clickable="false"
    android:focusable="false">

    <!-- Top Gradient Overlay -->
    <View
        android:id="@+id/top_gradient"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="top"
        android:background="@drawable/gradient_top"
        android:visibility="gone" />

    <!-- Bottom Gradient Overlay -->
    <View
        android:id="@+id/bottom_gradient"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_bottom"
        android:visibility="gone" />

    <!-- Top Info Bar - Title at top left like reference image -->
    <LinearLayout
        android:id="@+id/top_info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:gravity="start|center_vertical"
        android:visibility="gone">

        <!-- Content Title -->
        <TextView
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

    </LinearLayout>

    <!-- Center Play/Pause Icon Overlay (shown when clicking center) -->
    <ImageView
        android:id="@+id/play_pause_overlay"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/exo_icon_play"
        android:tint="#ffffff"
        android:alpha="0.9"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <!-- Bottom Control Bar -->
    <LinearLayout
        android:id="@+id/bottom_controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:visibility="gone">

        <!-- Progress Bar Container -->
        <LinearLayout
            android:id="@+id/progress_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Progress Bar -->
            <androidx.media3.ui.DefaultTimeBar
                android:id="@+id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:focusable="true"
                android:layout_marginBottom="12dp" />

            <!-- Time Position and Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:id="@+id/exo_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:text="00:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="18sp"
                    android:text=" / "
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

                <TextView
                    android:id="@+id/exo_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="18sp"
                    android:text="00:00" />

            </LinearLayout>

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:id="@+id/control_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:focusable="false"
            android:descendantFocusability="afterDescendants">

            <!-- Restart Button - Smaller Icon -->
            <ImageButton
                android:id="@+id/restart_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_replay"
                android:background="@drawable/restart_button_bg"
                android:scaleType="centerInside"
                android:tint="#ffffff"
                android:padding="12dp"
                android:layout_marginEnd="12dp"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="Restart"
                android:nextFocusUp="@id/progress_bar_container"
                android:nextFocusRight="@id/next_button" />

            <!-- Next Button (for series) - Smaller Icon -->
            <ImageButton
                android:id="@+id/next_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_next"
                android:background="@drawable/restart_button_bg"
                android:scaleType="centerInside"
                android:tint="#ffffff"
                android:padding="12dp"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="Next Episode"
                android:nextFocusUp="@id/progress_bar_container"
                android:nextFocusLeft="@id/restart_button"
                android:nextFocusRight="@id/subtitle_button"
                android:visibility="gone" />

            <!-- Subtitle Button - AI Generated Subtitles -->
            <ImageButton
                android:id="@+id/subtitle_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_subtitles"
                android:background="@drawable/restart_button_bg"
                android:scaleType="centerInside"
                android:tint="#ffffff"
                android:padding="12dp"
                android:layout_marginEnd="12dp"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="Toggle Subtitles"
                android:nextFocusUp="@id/progress_bar_container"
                android:nextFocusLeft="@id/next_button"
                android:nextFocusRight="@id/subtitle_button"
                android:visibility="visible" />

        </LinearLayout>

        <!-- LIVE Badge (shown for live content) -->
        <LinearLayout
            android:id="@+id/live_badge_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/live_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— LIVE"
                android:textColor="#ff0000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#40ffffff" />

        </LinearLayout>

    </LinearLayout>

    <!-- Hidden buttons for ExoPlayer control (not visible, controlled by keys) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/exo_rew"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:focusable="false" />

        <ImageButton
            android:id="@+id/exo_play_pause"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:focusable="false" />

        <ImageButton
            android:id="@+id/exo_ffwd"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:focusable="false" />

    </LinearLayout>

    <!-- Live Subtitle Text Overlay (AI Generated) -->
    <TextView
        android:id="@+id/live_subtitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="#DD000000"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:visibility="gone"
        android:focusable="false"
        android:clickable="false"
        android:elevation="100dp"
        android:translationZ="100dp"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="[LIVE] This is an example subtitle text that appears here"
        tools:visibility="visible" />

</FrameLayout>
