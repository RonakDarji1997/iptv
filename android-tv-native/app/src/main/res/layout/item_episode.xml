<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/episode_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:clickable="true"
    app:cardBackgroundColor="#18181b"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Episode Thumbnail -->
        <ImageView
            android:id="@+id/episode_thumbnail"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="#27272a"
            android:layout_marginEnd="12dp"
            android:contentDescription="Episode Thumbnail" />

        <!-- Episode Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/episode_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E1. Episode Title"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/episode_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45 min"
                android:textColor="#71717a"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Play Icon -->
        <TextView
            android:id="@+id/episode_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â–¶"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
