<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f1419">

<!-- Main Content Layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Left Icon Sidebar -->
    <LinearLayout
        android:id="@+id/sidebar_container"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1a2027"
        android:gravity="center_vertical">

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_search"
            android:padding="18dp"
            android:scaleType="fitCenter"
            android:background="@drawable/nav_item_normal"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginBottom="30dp"
            android:nextFocusDown="@+id/tab_tv" />

        <!-- TV Icon -->
        <ImageView
            android:id="@+id/tab_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_live_tv"
            android:padding="18dp"
            android:scaleType="fitCenter"
            android:background="@drawable/nav_item_normal"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginBottom="20dp"
            android:nextFocusUp="@+id/search_button"
            android:nextFocusDown="@+id/tab_movies" />

        <!-- Movies Icon -->
        <ImageView
            android:id="@+id/tab_movies"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_movies"
            android:padding="18dp"
            android:scaleType="fitCenter"
            android:background="@drawable/nav_item_normal"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginBottom="20dp"
            android:nextFocusUp="@+id/tab_tv"
            android:nextFocusDown="@+id/tab_shows" />

        <!-- Shows Icon -->
        <ImageView
            android:id="@+id/tab_shows"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_series"
            android:padding="18dp"
            android:scaleType="fitCenter"
            android:background="@drawable/nav_item_normal"
            android:focusable="true"
            android:clickable="true"
            android:nextFocusUp="@+id/tab_movies" />

    </LinearLayout>

    <!-- Categories Column -->
    <LinearLayout
        android:id="@+id/category_sidebar"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1f2833"
        android:visibility="visible">

        <!-- Category Header -->
        <TextView
            android:id="@+id/category_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Playlists"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp" />

        <!-- Categories List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false" />

    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#0f1419">

        <!-- Player and Preview Row -->
        <LinearLayout
            android:id="@+id/player_preview_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <!-- Video Player Area (for TV channels only) - 70% -->
            <FrameLayout
                android:id="@+id/player_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="#000000"
                android:visibility="visible">

                <androidx.media3.ui.PlayerView
                    android:id="@+id/player_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:controller_layout_id="@layout/custom_player_controls"
                    app:show_timeout="5000"
                    app:auto_show="true" />

            </FrameLayout>

            <!-- Preview Panel (Side) - 30% -->
            <ScrollView
                android:id="@+id/preview_panel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#1f2833"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <!-- Poster (for Movies/Shows) -->
                    <ImageView
                        android:id="@+id/preview_poster"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="#000000"
                        android:contentDescription="Content poster"
                        android:visibility="gone" />

                    <!-- Channel Name / Content Title -->
                    <TextView
                        android:id="@+id/preview_channel_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Russia Today"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="12dp" />

                    <!-- Year, Rating, Duration Row -->
                    <LinearLayout
                        android:id="@+id/preview_meta_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/preview_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#99ffffff"
                            android:textSize="13sp"
                            android:text="2022" />

                        <TextView
                            android:id="@+id/preview_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fbbf24"
                            android:textSize="13sp"
                            android:text="⭐ 8.5"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/preview_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#99ffffff"
                            android:textSize="13sp"
                            android:text="2h 15m"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <!-- Time (for Live TV) -->
                    <TextView
                        android:id="@+id/preview_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20:07"
                        android:textColor="#66ffffff"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <!-- Genres / Country -->
                    <TextView
                        android:id="@+id/preview_genres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#99ffffff"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/preview_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#cccccc"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="12dp"
                        android:maxLines="5"
                        android:ellipsize="end"
                        android:visibility="gone" />

                    <!-- Cast -->
                    <LinearLayout
                        android:id="@+id/preview_cast_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cast"
                            android:textColor="#99ffffff"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/preview_actors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#cccccc"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- Director -->
                    <LinearLayout
                        android:id="@+id/preview_director_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Director"
                            android:textColor="#99ffffff"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/preview_director"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#cccccc"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Program Info (for Live TV) -->
                    <TextView
                        android:id="@+id/preview_program_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Channel #1188 - Live TV"
                        android:textColor="#99ffffff"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <!-- Hint Text -->
                    <TextView
                        android:id="@+id/preview_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Press OK for fullscreen"
                        android:textColor="#66ffffff"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <!-- Movie/Show Details Header (shown above grid for Movies/Shows) -->
        <LinearLayout
            android:id="@+id/movie_details_header_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0f1419"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone">

            <!-- Poster on left with text fallback -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:background="#000000">

                <ImageView
                    android:id="@+id/detail_poster_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Movie poster" />

                <TextView
                    android:id="@+id/detail_poster_text_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#1a1a1a"
                    android:visibility="gone"
                    android:maxLines="4"
                    android:ellipsize="end" />

            </FrameLayout>

            <!-- Info on right -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/detail_title_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ben Stokes: Phoenix from the Ashes"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Meta row: Year, Duration, Rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/detail_year_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2022"
                        android:textColor="#99ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:textColor="#99ffffff"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/detail_duration_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1h 44m"
                        android:textColor="#99ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:textColor="#99ffffff"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/detail_genre_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENGLISH | COLLECTION MOVIES"
                        android:textColor="#99ffffff"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Cast -->
                <TextView
                    android:id="@+id/detail_cast_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cast: Ben Stokes, Sam Mendes, Clare Stokes, Deb Stokes, Neil F..."
                    android:textColor="#cccccc"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Director -->
                <TextView
                    android:id="@+id/detail_director_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Director: Chris Grubb, Luke Mellows"
                    android:textColor="#cccccc"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Description -->
                <TextView
                    android:id="@+id/detail_description_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From breathtaking highs — a World Cup win, an astonishing last stand in the Ashes, and an inspiring England captaincy — to the lows — a trial for affray, personal tragedy, and mental health challenges..."
                    android:textColor="#aaaaaa"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Content Header -->
        <LinearLayout
            android:id="@+id/content_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:background="#1a2027">

            <TextView
                android:id="@+id/content_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All Channels"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 channels"
                android:textColor="#66ffffff"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Content Grid with EPG Timeline -->
        <FrameLayout
            android:id="@+id/content_list_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/content_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:clipToPadding="false" />

            <!-- Empty State Message -->
            <TextView
                android:id="@+id/empty_state_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Select a category to see content"
                android:textColor="#99ffffff"
                android:textSize="18sp"
                android:visibility="gone" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/loading_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <!-- Hidden Debug Info -->
    <TextView
        android:id="@+id/debug_selected_tab"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/debug_hover_tab"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/debug_sidebar_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
<!-- End Main Content Layout -->

<!-- Movie/Show Details Overlay (shown on fullscreen for 3 seconds) -->
<LinearLayout
    android:id="@+id/movie_details_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:background="#DD000000"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"
    android:elevation="10dp"
    android:visibility="gone">

    <!-- Poster on left with text fallback -->
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/detail_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Movie poster" />

        <TextView
            android:id="@+id/detail_poster_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#1a1a1a"
            android:visibility="gone"
            android:maxLines="4"
            android:ellipsize="end" />

    </FrameLayout>

    <!-- Info on right -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ben Stokes: Phoenix from the Ashes"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Meta row: Year, Duration, Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/detail_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:textColor="#ccffffff"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textColor="#ccffffff"
                android:textSize="15sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/detail_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h 44m"
                android:textColor="#ccffffff"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textColor="#ccffffff"
                android:textSize="15sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/detail_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENGLISH | COLLECTION MOVIES"
                android:textColor="#ccffffff"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Cast -->
        <TextView
            android:id="@+id/detail_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cast: Ben Stokes, Sam Mendes, Clare Stokes, Deb Stokes, Neil F..."
            android:textColor="#dddddd"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Director -->
        <TextView
            android:id="@+id/detail_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Director: Chris Grubb, Luke Mellows"
            android:textColor="#dddddd"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Description -->
        <TextView
            android:id="@+id/detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From breathtaking highs — a World Cup win, an astonishing last stand in the Ashes, and an inspiring England captaincy — to the lows — a trial for affray, personal tragedy, and mental health challenges..."
            android:textColor="#cccccc"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>

</FrameLayout>
